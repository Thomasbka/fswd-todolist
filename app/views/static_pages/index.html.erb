<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center mb-4">To Do List</h1>
      <div class="card">
        <div class="card-body">
          <form id="new-task-form" class="mb-4">
            <div class="input-group">
              <input type="text" id="new-task" class="form-control" placeholder="Enter a new task">
              <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Add Task</button>
              </div>
            </div>
          </form>
          <div class="mb-3">
            <button class="btn btn-outline-secondary btn-sm" id="show-active-tasks">Show Active Tasks</button>
            <button class="btn btn-outline-secondary btn-sm" id="show-completed-tasks">Show Completed Tasks</button>
          </div>
          <ul class="list-group" id="tasks">
          </ul>
          <ul class="list-group d-none" id="completed-tasks">
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
